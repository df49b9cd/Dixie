{
  "name": "prettier-plugin-nika",
  "version": "0.0.1",
  "description": "Prettier plugin for C# powered by Roslyn",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.21.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "npm run build && vitest run",
    "demo": "npm run build && node ./scripts/demo.mjs",
    "postinstall": "node ./scripts/postinstall.mjs"
  },
  "peerDependencies": {
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "execa": "^9.6.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4",
    "vite": "^7.1.12"
  },
  "keywords": [
    "prettier",
    "prettier-plugin",
    "csharp",
    "roslyn",
    "formatting"
  ],
  "author": "Project Nika contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://example.com/nika.git"
  }
}
